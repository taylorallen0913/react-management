{
  "name": "react-management",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "description": "A simple, intuitive, and lightweight tool for managing React projects.",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "demo": "yarn workspace @react-management/ui webpack",
    "prettier": "prettier --config .prettierrc --write \"**/*.{js}\"",
    "clean": "yarn clean:modules",
    "clean:modules": "rimraf packages/**/node_modules && rimraf node_modules"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/taylorallen0913/react-management.git"
  },
  "devDependencies": {
    "lerna": "^3.22.1",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2"
  }
}
